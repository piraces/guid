{
  "name": "guid",
  "version": "0.9.0",
  "description": "NPM package for generating and managing globally unique identifiers (GUIDs)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piraces/guid.git"
  },
  "keywords": [
    "typescript",
    "guid",
    "id",
    "uuid",
    "identifier"
  ],
  "author": "Raúl Piracés Alastuey <raul@piraces.dev> (https://piraces.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piraces/guid/issues"
  },
  "homepage": "https://github.com/piraces/guid#readme",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
