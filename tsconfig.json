{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true
    },
    "typedocOptions": {
      "mode": "modules",
      "out": "docs",
      "exclude": "**/*+(e2e|spec|test).ts"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}